<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="36sp"
        style="@style/title"
        />

    <TextView
        android:id="@+id/tvNameValue"
        style="@style/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LeeBj"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBaseline_toBaselineOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <TextView
        android:id="@+id/tvBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birth"
        style="@style/title"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvBirthValue"
        style="@style/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0000-00-00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/tvBirth" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/tvBlood"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Type"
        android:textColor="@color/brown"
        app:layout_constraintEnd_toEndOf="@+id/tvBirth"
        app:layout_constraintStart_toStartOf="@+id/tvBirth"
        app:layout_constraintTop_toBottomOf="@+id/tvBirth" />

    <TextView
        android:id="@+id/tvBloodValue"
        style="@style/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RH+ A"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBlood"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <TextView
        android:id="@+id/tvEtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETC"
        style="@style/title"
        app:layout_constraintEnd_toEndOf="@+id/tvBlood"
        app:layout_constraintStart_toStartOf="@+id/tvBlood"
        app:layout_constraintTop_toBottomOf="@+id/tvBlood" />

    <TextView
        android:id="@+id/tvEtcValue"
        style="@style/value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="etc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvEtc" />



</androidx.constraintlayout.widget.ConstraintLayout>